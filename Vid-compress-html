    <!-- Include FFmpeg.js -->
    <script src="https://unpkg.com/@ffmpeg/ffmpeg@0.11.0/dist/ffmpeg.min.js"></script>
    <script>
        const { createFFmpeg, fetchFile } = FFmpeg;
        let ffmpeg = null;
        let startTime = null;

        const initializeFFmpeg = async () => {
            if (!ffmpeg) {
                ffmpeg = createFFmpeg({ log: true });
                await ffmpeg.load();
            }
        };

        const compressVideo = async (file, compressionLevel) => {
            try {
                // Reset FFmpeg instance for a new compression task
                if (ffmpeg) {
                    ffmpeg.exit();
                }
                ffmpeg = createFFmpeg({ log: true });
                await ffmpeg.load();

                // Write the file to FFmpeg's file system
                ffmpeg.FS('writeFile', 'input.mp4', await fetchFile(file));

                // Start the timer
                startTime = Date.now();
                updateTimer();

                // Compress the video based on the selected resolution
                await ffmpeg.run(
                    '-i', 'input.mp4',
                    '-vf', `scale=-2:${compressionLevel}`,
                    '-b:v', '1M', // Adjust bitrate for better compression
                    'output.mp4'
                );

                // Stop the timer
                const endTime = Date.now();
                const compressionTime = ((endTime - startTime) / 1000).toFixed(2);
                document.getElementById('timer').textContent = `Compression Time: ${compressionTime}s`;

                // Read the compressed video
                const data = ffmpeg.FS('readFile', 'output.mp4');

                // Create a URL for the compressed video
                return URL.createObjectURL(new Blob([data.buffer], { type: 'video/mp4' }));
            } catch (error) {
                console.error('Error compressing video:', error);
                throw error;
            }
        };

        const updateTimer = () => {
            if (startTime) {
                const currentTime = Date.now();
                const elapsedTime = ((currentTime - startTime) / 1000).toFixed(2);
                document.getElementById('timer').textContent = `Compression Time: ${elapsedTime}s`;
                requestAnimationFrame(updateTimer);
            }
        };

        document.getElementById('compressBtn').addEventListener('click', async () => {
            const file = document.getElementById('videoUpload').files[0];
            const compressionLevel = document.getElementById('compressionLevel').value;

            if (!file) {
                alert('Please upload a video file first.');
                return;
            }

            // Disable buttons during processing
            document.getElementById('compressBtn').disabled = true;
            document.getElementById('downloadBtn').disabled = true;

            try {
                const url = await compressVideo(file, compressionLevel);

                // Display the compressed video
                const video = document.getElementById('compressedVideo');
                video.src = url;
                video.controls = true;

                // Enable the download button
                const downloadBtn = document.getElementById('downloadBtn');
                downloadBtn.disabled = false;
                downloadBtn.onclick = () => {
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = `compressed-video-${compressionLevel}p.mp4`;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                };
            } catch (error) {
                alert('Failed to compress the video. Please try again.');
            } finally {
                // Re-enable the compress button
                document.getElementById('compressBtn').disabled = false;
            }
        });
    </script>
